<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Video Element Resolver -->
        <service id="SpecialBlocks\Core\Content\Cms\SalesChannel\Element\VideoElementResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- Table Element Resolver -->
        <service id="SpecialBlocks\Core\Content\Cms\SalesChannel\Element\TableElementResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- Opening Hours Element Resolver -->
        <service id="SpecialBlocks\Core\Content\Cms\SalesChannel\Element\OpeningHoursElementResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>

        <!-- Configuration Service -->
        <service id="SpecialBlocks\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!-- Twig String Compiler -->
        <service id="SpecialBlocks\Service\TwigStringCompiler">
            <argument type="service" id="twig"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Theme Compiler Subscriber -->
        <service id="SpecialBlocks\Subscriber\ThemeCompilerSubscriber">
            <argument type="service" id="SpecialBlocks\Service\ConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Storefront Controller -->
        <service id="SpecialBlocks\Storefront\Controller\SpecialBlocksController" public="true">
            <argument type="service" id="SpecialBlocks\Service\ConfigService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Twig Extension -->
        <service id="SpecialBlocks\Twig\SpecialBlocksExtension">
            <argument type="service" id="SpecialBlocks\Service\ConfigService"/>
            <argument type="service" id="SpecialBlocks\Service\TwigStringCompiler"/>
            <tag name="twig.extension"/>
        </service>

        <!-- Twig String Loader for HTML/Twig Element -->
        <service id="Twig\Extension\StringLoaderExtension">
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
