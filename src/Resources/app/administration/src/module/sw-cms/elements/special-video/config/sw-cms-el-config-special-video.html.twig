{% block sw_cms_element_special_video_config %}
    <div class="sw-cms-el-config-special-video">
        <div class="sw-cms-el-config-special-video__config-section">

            <!-- Video Media Selection -->
            <sw-upload-listener
                :uploadTag="uploadTag"
                autoUpload
                @media-upload-finish="onMediaUploadFinish">
            </sw-upload-listener>

            <sw-media-modal-v2
                v-if="showMediaModal"
                :initialFolderId="defaultFolderId"
                :allowMultiSelect="false"
                @media-modal-selection-change="onMediaSelected"
                @modal-close="showMediaModal = false">
            </sw-media-modal-v2>

            <sw-media-compact-upload-v2
                :source="mediaItem"
                :label="$tc('specialBlocks.video.config.videoSrc.label')"
                :helpText="$tc('specialBlocks.video.config.videoSrc.helpText')"
                :defaultFolder="defaultFolderId"
                :uploadTag="uploadTag"
                variant="regular"
                allowMultiSelect
                @media-upload-sidebar-open="showMediaModal = true"
                @media-drop="onMediaDropped"
                @media-upload-remove-image="onRemoveMediaItem">
            </sw-media-compact-upload-v2>

            <!-- Video Settings -->
            <div class="sw-cms-el-config-special-video__settings" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 10px;">
                    <input 
                        type="checkbox" 
                        v-model="element.config.autoplay.value"
                        @change="onElementUpdate(element)">
                    Automatisch abspielen
                </label>

                <label style="display: block; margin-bottom: 10px;">
                    <input 
                        type="checkbox" 
                        v-model="element.config.controls.value"
                        @change="onElementUpdate(element)">
                    Steuerungsleiste anzeigen
                </label>

                <label style="display: block; margin-bottom: 10px;">
                    <input 
                        type="checkbox" 
                        v-model="element.config.muted.value"
                        @change="onElementUpdate(element)">
                    Stumm schalten
                </label>

                <label style="display: block; margin-bottom: 10px;">
                    <input 
                        type="checkbox" 
                        v-model="element.config.loop.value"
                        @change="onElementUpdate(element)">
                    Endlosschleife
                </label>
            </div>

            <!-- Dimensions -->
            <div class="sw-cms-el-config-special-video__dimensions" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                <div class="sw-field">
                    <label class="sw-field__label">Breite</label>
                    <input
                        type="text"
                        class="sw-field__input"
                        v-model="element.config.width.value"
                        placeholder="100%"
                        @input="onElementUpdate(element)"
                        style="padding: 8px;">
                </div>

                <div class="sw-field">
                    <label class="sw-field__label">HÃ¶he</label>
                    <input
                        type="text"
                        class="sw-field__input"
                        v-model="element.config.height.value"
                        placeholder="auto"
                        @input="onElementUpdate(element)"
                        style="padding: 8px;">
                </div>
            </div>
        </div>
    </div>
{% endblock %}